{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "exclude": [
    "**/*.test.ts"
  ]
}
